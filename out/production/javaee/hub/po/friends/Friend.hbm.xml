<?xml version="1.0"  encoding="utf-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="hub.po.friends.Friend" catalog="forum" table="friends">
        <id name="id" column="frid" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="date" type="java.util.Date">
            <column name="date" />
        </property>
        <many-to-one name="customer" column="cid" class="hub.po.customer.Customer" lazy="false"/>
        <many-to-one name="friends" column="fid" class="hub.po.customer.Customer" lazy="false"/>
    </class>
</hibernate-mapping>